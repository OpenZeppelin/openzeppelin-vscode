{
	"name": "openzeppelin-ls",
	"description": "OpenZeppelin Language Server",
	"author": "OpenZeppelin",
	"version": "0.0.1",
	"repository": {
		"type": "git",
		"url": "https://github.com/OpenZeppelin/openzeppelin-ls"
	},
	"publisher": "OpenZeppelin",
	"categories": [],
	"keywords": [
		"openzeppelin",
		"solidity",
		"ethereum"
	],
	"engines": {
		"vscode": "^1.75.0"
	},
	"activationEvents": [
		"onLanguage:solidity"
	],
	"main": "./client/out/extension",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "OpenZeppelin Language Server",
			"properties": {
				"openzeppelinLS.namespacePrefix": {
					"scope": "resource",
					"type": "string",
					"default": "",
					"description": "The prefix to use for ERC-7201 namespace ids. Leave blank to auto detect."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"lint": "eslint ./client/src ./server/src --ext .ts,.tsx",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
		"test": "sh ./scripts/e2e.sh"
	},
	"devDependencies": {
		"@types/mocha": "^10.0.6",
		"@types/node": "^18.14.6",
		"@typescript-eslint/eslint-plugin": "^7.1.0",
		"@typescript-eslint/parser": "^7.1.0",
		"eslint": "^8.57.0",
		"mocha": "^10.3.0",
		"typescript": "^5.3.3"
	}
}
